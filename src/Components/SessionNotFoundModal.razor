@namespace PocketStoryPoker.Components
@inject NavigationManager Navigation

<div class="modal @(_isVisible ? "modal-visible" : "")" id="sessionNotFoundModal">
    <div class="modal-backdrop"></div>
    <div class="modal-content">
        <div class="modal-header">
            <h3>Session Not Found</h3>
        </div>
        <div class="modal-body">
            <div class="error-icon">‚ùå</div>
            <p class="error-message">The session you're trying to join doesn't exist or has ended.</p>
            <p>Please check the session ID or create a new session.</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" @onclick="GoToHomePage">Return to Home</button>
        </div>
    </div>
</div>

@code {
    private bool _isVisible = false;

    public void Show()
    {
        _isVisible = true;
        StateHasChanged();
    }

    private void GoToHomePage()
    {
        _isVisible = false;
        Navigation.NavigateTo("/");
    }
}
